DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=verify-full"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
# Use your platform Stripe secret key (not a restricted key) for admin Connect onboarding/payout APIs.

# Admin owner credentials
ADMIN_EMAIL="owner@example.com"
# Generate with: npm run admin:hash -- "your-password"
ADMIN_PASSWORD_HASH="scrypt|<salt-hex>|<hash-hex>"
# Long random secret used to sign admin session cookies.
ADMIN_SESSION_SECRET="replace-with-long-random-secret"

# Vercel Blob – used for menu item image uploads
# Get your token from: Vercel Dashboard → Storage → Create Blob Store
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxx"

# Optional email (Resend) – used for custom order notifications and admin replies
RESEND_API_KEY="re_xxx"
RESEND_FROM_EMAIL="Flour Haus <orders@yourdomain.com>"
# Optional reply-to override used when admin emails customers from the dashboard
CUSTOM_ORDER_REPLY_TO_EMAIL="owner@yourdomain.com"

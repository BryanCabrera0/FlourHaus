// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum FulfillmentMethod {
  pickup
  delivery
}

enum OrderStatus {
  new
  paid
  baking
  ready
  completed
  canceled
}

enum CustomOrderRequestStatus {
  pending
  accepted
  denied
}

model MenuItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  imageUrl    String?
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  isFeatured  Boolean  @default(false)
  featuredSortOrder Int @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  variants    MenuItemVariant[]
}

model MenuItemVariant {
  id        Int      @id @default(autoincrement())
  menuItemId Int
  menuItem  MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  label     String
  unitCount Int      @default(1)
  price     Float
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([menuItemId, sortOrder])
}

model Order {
  id              Int               @id @default(autoincrement())
  items           String
  total           Float
  fulfillment     FulfillmentMethod @default(pickup)
  scheduledDate   String?
  scheduledTimeSlot String?
  deliveryAddress String?
  stripeSessionId String            @unique
  status          OrderStatus       @default(new)
  customerName    String?
  customerEmail   String?
  customerPhone   String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}

model CustomOrderRequest {
  id                    Int                      @id @default(autoincrement())
  customerName          String
  customerEmail         String
  customerPhone         String?
  desiredItems          String
  requestDetails        String
  requestedDate         DateTime?
  fulfillmentPreference FulfillmentMethod?
  deliveryAddress       String?
  budget                String?
  status                CustomOrderRequestStatus @default(pending)
  paymentToken          String?                  @unique
  paymentAmount         Float?
  paymentCreatedAt      DateTime?
  paymentPaidAt         DateTime?
  createdAt             DateTime                 @default(now())
  updatedAt             DateTime                 @default(now()) @updatedAt
  messages              CustomOrderRequestMessage[]

  @@index([status, createdAt])
}

model CustomOrderRequestMessage {
  id                   Int                @id @default(autoincrement())
  customOrderRequestId Int
  customOrderRequest   CustomOrderRequest @relation(fields: [customOrderRequestId], references: [id], onDelete: Cascade)
  subject              String
  message              String
  sentByEmail          String
  createdAt            DateTime           @default(now())

  @@index([customOrderRequestId, createdAt])
}

model AdminAuditLog {
  id         Int      @id @default(autoincrement())
  action     String
  entityType String
  entityId   Int?
  details    String
  actorEmail String
  createdAt  DateTime @default(now())
}

model StoreSettings {
  id              Int      @id @default(1)
  stripeAccountId String?  @unique
  ownerSmsPhone   String?
  ownerSmsCarrier String?
  fulfillmentSchedule Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}
